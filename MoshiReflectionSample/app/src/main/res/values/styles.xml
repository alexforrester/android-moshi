<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MovieTitle">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Headline</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingStart">9dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="MovieBody">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Medium</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:layout_marginLeft">6dp</item>
    </style>

    <style name="MovieGenres">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Small</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:layout_marginLeft">6dp</item>
    </style>

    <style name="MovieVotes">
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:layout_marginLeft">6dp</item>
    </style>

    <style name="MovieImage">
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">12dp</item>
    </style>

</resources>
